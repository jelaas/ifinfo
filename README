ifinfo [-aw] [-ps] [-i IFNAME|-I ifindex] [key]
version 1.4
 -a --all         Output all keys found.
 -w --nowhite     Do not output whitespace in values.
 -p --prefix S    Prefix values with string S.
 -s --suffix S    Append string S to values.
 --debug

